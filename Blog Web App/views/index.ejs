    @media (max-width: 767px) {
        .popular-bloggers {
            border-left: none; /* Remove left border on smaller screens */
            border-top: 1px solid #ccc; /* Thin top border on smaller screens */
            padding-left: 0; /* Remove padding on smaller screens */
            margin-top: 0; /* Remove margin on smaller screens */
        }
    }

    .blogger-profile {
        border: 1px solid #ccc; /* Thin border around each blogger profile */
        border-radius: 5px; /* Rounded corners */
