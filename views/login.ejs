<%- include("partials/header.ejs") %>
</div>

<div class="login-container pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="card-header text-center mb-3">
                        <h2>Login to BlogBunny</h2>
                    </div>
                    <div class="card-body">
                        <form action="/login" method="POST">
                            <div class="form-group mb-2"> <!-- Increased bottom margin -->
                                <label for="email">Email:</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="johndoe@gmail.com">
                            </div>
                            <div class="form-group mb-4"> <!-- Increased bottom margin -->
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mb-2">Login</button> <!-- Increased bottom margin -->
                        </form>
                        <hr>
                    <div class="card-body text-center">
                        <p>Or log in with Google:</p> 
                         <!-- Google Login Button -->
                        <a class="btn btn-danger btn-block" href="/auth/google">Google</a>
                        <p class="mt-3">Don't have an account? <a href="/register">Register here</a></p>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

