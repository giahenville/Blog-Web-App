<!-- Script to highlight active nav tab -->
<script>
  // Get the current URL path
  var path = window.location.pathname;

  // Add 'active' class to corresponding nav-link
  $('.nav-link').each(function () {
    var href = $(this).attr('href');
    if (path === href) {
      $(this).addClass('active');
    }
  });
</script>